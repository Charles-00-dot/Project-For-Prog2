import java.time.LocalDate;
import java.time.temporal.ChronoUnit;
public class Rental implements Payment {
boolean rentable = true;
int cus_id;
int mov_id;
int nights_rent;
LocalDate d1;
LocalDate d2;



public long nights_rented(LocalDate d1, LocalDate d2) {
	long diff_days =ChronoUnit.DAYS.between(d1, d2);
	int diff_int = (int) diff_days;
	System.out.println("Number of days rented: " + diff_int);
	return diff_int;
	
	
}
static String calStud(int dr) {

double stu_pay = 0;
if(dr > 7) {
	 stu_pay = (fee_students+((dr-7)*1));
	 
}
return ("The student's fee: $" + stu_pay );

}

static String calExem(int dr1) {
	double exem_pay = 0;
	if (dr1 >7) {
		exem_pay =(fee_Ex_member + ((dr1-7)*2) );
		return ("The external member's fee: $" + exem_pay );
	}
if(dr1<=7 || dr1>0) {
		System.out.println("The external member's fee: $" + fee_Ex_member);
	}
	return null;
		
	
}
}
